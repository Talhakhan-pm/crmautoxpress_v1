<!-- Dispatch New - Redirect to Command Center -->
<main class="main-content">
    <%= turbo_frame_tag "main_content" do %>
        <div class="redirect-message">
            <div class="message-content">
                <i class="fas fa-info-circle"></i>
                <h2>Dispatches are Auto-Created</h2>
                <p>Dispatches are automatically created when orders are placed. Use the dispatch management tools to update supplier costs and tracking.</p>
                <%= link_to "Go to Dispatch Command Center", dispatches_path, 
                    class: "btn btn-primary", 
                    data: { turbo_frame: "main_content" } %>
            </div>
        </div>
    <% end %>
</main>