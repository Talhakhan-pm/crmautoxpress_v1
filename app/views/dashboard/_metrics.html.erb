<div class="metrics-grid">
  <div class="metric-card primary" data-metric="total_leads">
    <div class="metric-icon">
      <i class="fas fa-chart-line"></i>
    </div>
    <div class="metric-content">
      <h3 class="metric-value"><%= stats[:total_leads] %></h3>
      <p class="metric-label">Total Leads</p>
      <span class="metric-change positive">Updated <%= Time.current.strftime("%H:%M:%S") %></span>
    </div>
  </div>

  <div class="metric-card success" data-metric="sales_closed">
    <div class="metric-icon">
      <i class="fas fa-trophy"></i>
    </div>
    <div class="metric-content">
      <h3 class="metric-value"><%= stats[:sales_closed] %></h3>
      <p class="metric-label">Sales Closed</p>
      <span class="metric-change positive">Updated <%= Time.current.strftime("%H:%M:%S") %></span>
    </div>
  </div>

  <div class="metric-card warning" data-metric="conversion_rate">
    <div class="metric-icon">
      <i class="fas fa-percent"></i>
    </div>
    <div class="metric-content">
      <h3 class="metric-value"><%= stats[:conversion_rate] %>%</h3>
      <p class="metric-label">Conversion Rate</p>
      <span class="metric-change positive">Updated <%= Time.current.strftime("%H:%M:%S") %></span>
    </div>
  </div>

  <div class="metric-card info" data-metric="follow_ups_due">
    <div class="metric-icon">
      <i class="fas fa-clock"></i>
    </div>
    <div class="metric-content">
      <h3 class="metric-value"><%= stats[:follow_ups_due] %></h3>
      <p class="metric-label">Follow-ups Due</p>
      <span class="metric-change neutral">Next 3 days</span>
    </div>
  </div>
</div>