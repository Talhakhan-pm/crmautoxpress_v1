<div class="refunds-modern-grid">
  <% refunds.each do |refund| %>
    <div class="refunds-grid-item">
      <%= render 'refunds/refund', refund: refund %>
    </div>
  <% end %>
  
  <% if refunds.empty? %>
    <div class="refunds-empty-state">
      <div class="refunds-empty-icon">
        <i class="fas fa-undo-alt"></i>
      </div>
      <h3 class="refunds-empty-title">No refunds found</h3>
      <p class="refunds-empty-text">
        <% if params[:search].present? || params[:stage].present? || params[:reason].present? %>
          Try adjusting your filters to see more results.
        <% else %>
          Refunds will appear here when they are automatically created from dispatch issues or customer requests.
        <% end %>
      </p>
    </div>
  <% end %>
</div>