<!-- Order Show Page with Unified Modal Theme -->
<div class="unified-modal theme-red active">
  <div class="unified-modal-content">
    <!-- Unified Modal Header with Red Theme -->
    <div class="unified-modal-header theme-red">
      <%= link_to orders_path, class: "unified-modal-close" do %>
        <i class="fas fa-times"></i>
      <% end %>
      
      <div class="unified-modal-header-content">
        <h2 class="unified-modal-title">
          <div class="modal-icon">
            <i class="fas fa-shopping-cart"></i>
          </div>
          Order #<%= @order.order_number %>
        </h2>
        
        <div class="unified-modal-subtitle">
          Created <%= @order.order_date.strftime("%B %d, %Y at %I:%M %p") %> by <%= @order.agent.email.split('@').first.humanize %>
          <% if @order.agent_callback.present? %>
            â€¢ <i class="fas fa-phone"></i> From Callback
          <% end %>
        </div>
        
        <!-- Status Timeline in Header -->
        <div class="unified-timeline">
          <div class="unified-timeline-line"></div>
          <% 
            progress_width = case @order.order_status
            when 'pending' then '0%'
            when 'confirmed' then '25%'
            when 'processing' then '50%'
            when 'shipped' then '75%'
            when 'delivered' then '100%'
            else '0%'
            end
          %>
          <div class="unified-timeline-progress" style="width: <%= progress_width %>"></div>
          
          <% ['pending', 'confirmed', 'processing', 'shipped', 'delivered'].each do |status| %>
            <div class="unified-timeline-item <%= 'completed' if ['confirmed', 'processing', 'shipped', 'delivered'].include?(@order.order_status) && ['pending', 'confirmed', 'processing', 'shipped'].include?(status) && status != @order.order_status %> <%= 'active' if @order.order_status == status %> <%= 'pending' unless ['confirmed', 'processing', 'shipped', 'delivered'].include?(@order.order_status) || @order.order_status == status %>">
              <div class="unified-timeline-marker">
                <% case status %>
                <% when 'pending' %>
                  <i class="fas fa-clock"></i>
                <% when 'confirmed' %>
                  <i class="fas fa-check-circle"></i>
                <% when 'processing' %>
                  <i class="fas fa-cog"></i>
                <% when 'shipped' %>
                  <i class="fas fa-truck"></i>
                <% when 'delivered' %>
                  <i class="fas fa-flag-checkered"></i>
                <% end %>
              </div>
              <div class="unified-timeline-label"><%= status.humanize %></div>
              <div class="unified-timeline-date">
                <% if status == 'pending' && @order.order_status != 'pending' %>
                  <%= @order.created_at.strftime("%b %d") %>
                <% elsif status == @order.order_status %>
                  Current
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Unified Modal Body -->
    <div class="unified-modal-body">
      
      <!-- Action Buttons Section -->
      <div class="unified-form-section">
        <div class="unified-section-header">
          <h3 class="section-title">Actions</h3>
        </div>
        <div class="action-buttons-grid" style="display: flex; gap: 12px; justify-content: center;">
          <%= link_to edit_order_path(@order), class: "btn btn-secondary" do %>
            <i class="fas fa-edit"></i>
            Edit Order
          <% end %>
          
          <% if @order.dispatch.present? %>
            <%= link_to dispatch_path(@order.dispatch), class: "btn btn-primary" do %>
              <i class="fas fa-truck"></i>
              View Dispatch
            <% end %>
          <% else %>
            <%= link_to new_dispatch_path(order_id: @order.id), class: "btn btn-primary" do %>
              <i class="fas fa-plus"></i>
              Create Dispatch
            <% end %>
          <% end %>
          
          <div class="status-info" style="display: flex; gap: 8px; align-items: center;">
            <span class="badge badge-<%= @order.order_status %>"><%= @order.order_status.humanize %></span>
            <span class="badge badge-<%= @order.priority %>"><%= @order.priority.humanize %> Priority</span>
          </div>
        </div>
        
        <% if @order.tracking_number.present? %>
          <div class="tracking-info" style="margin-top: 16px; padding: 12px; background: #f8fafc; border-radius: 8px; text-align: center;">
            <i class="fas fa-map-marker-alt"></i>
            <span>Tracking: <strong><%= @order.tracking_number %></strong></span>
            <% if @order.estimated_delivery.present? %>
              <span class="delivery-estimate" style="margin-left: 16px; color: #dc2626; font-weight: 600;">
                ETA: <%= @order.estimated_delivery.strftime("%b %d") %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <!-- Order Details Grid -->
      <div class="order-details-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px;">
        
        <!-- Left Column -->
        <!-- Customer Information Section -->
        <div class="unified-form-section">
          <div class="unified-section-header">
            <h3 class="section-title">
              <i class="fas fa-user"></i>
              Customer Information
            </h3>
            <% if @order.customer.present? %>
              <%= link_to customer_path(@order.customer), class: "btn btn-sm btn-outline-primary" do %>
                <i class="fas fa-external-link-alt"></i>
                View Profile
              <% end %>
            <% end %>
          </div>
          <div class="form-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px;">
            <div class="form-group">
              <label class="form-label">Name</label>
              <div class="form-value"><%= @order.customer_name %></div>
            </div>
            <div class="form-group">
              <label class="form-label">Phone</label>
              <div class="form-value">
                <a href="tel:<%= @order.customer_phone %>" class="text-primary">
                  <i class="fas fa-phone"></i>
                  <%= @order.customer_phone %>
                </a>
              </div>
            </div>
            <% if @order.customer_email.present? %>
              <div class="form-group">
                <label class="form-label">Email</label>
                <div class="form-value">
                  <a href="mailto:<%= @order.customer_email %>" class="text-primary">
                    <i class="fas fa-envelope"></i>
                    <%= @order.customer_email %>
                  </a>
                </div>
              </div>
            <% end %>
            <% if @order.customer_address.present? %>
              <div class="form-group" style="grid-column: 1 / -1;">
                <label class="form-label">Address</label>
                <div class="form-value">
                  <i class="fas fa-map-marker-alt"></i>
                  <%= @order.customer_address %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Product Information Card -->
        <div class="detail-card">
          <div class="card-header">
            <h3 class="card-title">
              <i class="fas fa-box"></i>
              Product Details
            </h3>
            <% if @order.product.present? %>
              <%= link_to product_path(@order.product), class: "view-profile-btn" do %>
                <i class="fas fa-external-link-alt"></i>
                View Product
              <% end %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="product-showcase">
              <div class="product-main">
                <div class="product-name"><%= @order.product_name %></div>
                <% if @order.vehicle_info.present? %>
                  <div class="vehicle-compatibility">
                    <i class="fas fa-car"></i>
                    Compatible with: <strong><%= @order.vehicle_info %></strong>
                  </div>
                <% end %>
                <% if @order.product_link.present? %>
                  <div class="product-link">
                    <a href="<%= @order.product_link %>" target="_blank" class="external-link">
                      <i class="fas fa-external-link-alt"></i>
                      View Product Details
                    </a>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Financial Summary Card -->
        <div class="detail-card">
          <div class="card-header">
            <h3 class="card-title">
              <i class="fas fa-dollar-sign"></i>
              Financial Summary
            </h3>
          </div>
          <div class="card-body">
            <div class="financial-breakdown">
              <div class="price-line">
                <span class="price-label">Product Price</span>
                <span class="price-value">$<%= number_with_delimiter(@order.product_price) %></span>
              </div>
              <% if @order.tax_amount.present? && @order.tax_amount > 0 %>
                <div class="price-line">
                  <span class="price-label">Tax</span>
                  <span class="price-value">$<%= number_with_delimiter(@order.tax_amount) %></span>
                </div>
              <% end %>
              <% if @order.shipping_cost.present? && @order.shipping_cost > 0 %>
                <div class="price-line">
                  <span class="price-label">Shipping</span>
                  <span class="price-value">$<%= number_with_delimiter(@order.shipping_cost) %></span>
                </div>
              <% end %>
              <div class="price-line total-line">
                <span class="price-label">Total Amount</span>
                <span class="price-value total-amount">$<%= number_with_delimiter(@order.total_amount) %></span>
              </div>
              
              <% if @order.commission_amount.present? && @order.commission_amount > 0 %>
                <div class="price-line commission-line">
                  <span class="price-label">Agent Commission</span>
                  <span class="price-value commission-amount">$<%= number_with_delimiter(@order.commission_amount) %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Additional Information -->
        <% if @order.comments.present? || @order.internal_notes.present? || @order.warranty_terms.present? %>
          <div class="detail-card">
            <div class="card-header">
              <h3 class="card-title">
                <i class="fas fa-sticky-note"></i>
                Additional Information
              </h3>
            </div>
            <div class="card-body">
              <% if @order.comments.present? %>
                <div class="note-section">
                  <label class="note-label">Customer Comments</label>
                  <div class="note-content"><%= @order.comments %></div>
                </div>
              <% end %>
              
              <% if @order.internal_notes.present? %>
                <div class="note-section">
                  <label class="note-label">Internal Notes</label>
                  <div class="note-content internal-note"><%= @order.internal_notes %></div>
                </div>
              <% end %>
              
              <% if @order.warranty_terms.present? %>
                <div class="note-section">
                  <label class="note-label">Warranty Terms</label>
                  <div class="note-content warranty-terms"><%= @order.warranty_terms %></div>
                </div>
              <% end %>
              
              <div class="metadata-grid">
                <% if @order.warranty_period_days.present? %>
                  <div class="metadata-item">
                    <span class="metadata-label">Warranty Period</span>
                    <span class="metadata-value"><%= @order.warranty_period_days %> days</span>
                  </div>
                <% end %>
                
                <% if @order.return_window_days.present? %>
                  <div class="metadata-item">
                    <span class="metadata-label">Return Window</span>
                    <span class="metadata-value"><%= @order.return_window_days %> days</span>
                  </div>
                <% end %>
                
                <div class="metadata-item">
                  <span class="metadata-label">Source Channel</span>
                  <span class="metadata-value">
                    <i class="fas fa-<%= @order.source_channel == 'phone' ? 'phone' : @order.source_channel == 'web' ? 'globe' : 'envelope' %>"></i>
                    <%= @order.source_channel.humanize %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Right Column - Activity Timeline -->
      <div class="activity-column">
        <div class="activity-panel">
          <div class="activity-header">
            <h3 class="activity-title">
              <i class="fas fa-history"></i>
              Order Timeline
              <span class="activity-count"><%= @activities.count %></span>
            </h3>
            
            <div class="timeline-stats">
              <div class="stat-item">
                <span class="stat-value"><%= @activities.count %></span>
                <span class="stat-label">Activities</span>
              </div>
              <div class="stat-item">
                <span class="stat-value"><%= @activities.where(action: 'updated').count %></span>
                <span class="stat-label">Updates</span>
              </div>
              <div class="stat-item">
                <span class="stat-value"><%= @activities.select(:user_id).distinct.count %></span>
                <span class="stat-label">Agents</span>
              </div>
            </div>
          </div>

          <div class="timeline-container" id="timeline-list">
            <% if @activities.any? %>
              <% @activities.each do |activity| %>
                <div class="timeline-item">
                  <div class="timeline-marker">
                    <div class="timeline-avatar">
                      <%= activity.user.email.first.upcase %>
                    </div>
                  </div>
                  
                  <div class="timeline-content">
                    <div class="timeline-card">
                      <div class="timeline-header">
                        <div class="timeline-user">
                          <div class="user-avatar">
                            <%= activity.user.email.first.upcase %>
                          </div>
                          <div class="user-details">
                            <div class="user-name"><%= activity.user.email.split('@').first.humanize %></div>
                            <div class="user-email"><%= activity.user.email %></div>
                          </div>
                        </div>
                        
                        <div class="timeline-meta">
                          <div class="timeline-time">
                            <%= time_ago_in_words(activity.created_at) %> ago
                          </div>
                          <span class="action-badge action-<%= activity.action %>">
                            <%= activity.action.humanize %>
                          </span>
                        </div>
                      </div>
                      
                      <div class="timeline-body">
                        <div class="activity-description">
                          <% case activity.action %>
                          <% when 'created' %>
                            <strong><%= activity.user.email.split('@').first.humanize %></strong> created this order
                            <% if activity.trackable.agent_callback.present? %>
                              from callback <strong>#<%= activity.trackable.agent_callback.id %></strong>
                            <% end %>
                          <% when 'updated' %>
                            <strong><%= activity.user.email.split('@').first.humanize %></strong> updated the order
                            <% if activity.field_changed.present? %>
                              - changed <strong><%= activity.field_changed.humanize %></strong>
                            <% end %>
                          <% when 'viewed' %>
                            <strong><%= activity.user.email.split('@').first.humanize %></strong> viewed order details
                          <% else %>
                            <strong><%= activity.user.email.split('@').first.humanize %></strong> <%= activity.action.humanize.downcase %>d the order
                          <% end %>
                        </div>
                        
                        <% if activity.field_changed.present? && activity.old_value.present? && activity.new_value.present? %>
                          <div class="timeline-changes">
                            <div class="change-item">
                              <span class="change-label"><%= activity.field_changed.humanize %></span>
                              <span class="change-from status-<%= activity.old_value %>"><%= activity.old_value.humanize %></span>
                              <i class="fas fa-arrow-right"></i>
                              <span class="change-to status-<%= activity.new_value %>"><%= activity.new_value.humanize %></span>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="empty-timeline">
                <i class="fas fa-history"></i>
                <h4>No Activity Yet</h4>
                <p>Order activities will appear here as they happen.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions Floating Menu -->
    <div class="quick-actions-menu">
      <button class="quick-toggle" onclick="toggleQuickActions()">
        <i class="fas fa-ellipsis-v"></i>
      </button>
      
      <div class="quick-actions-list">
        <%= link_to edit_order_path(@order), class: "quick-action" do %>
          <i class="fas fa-edit"></i>
          <span>Edit</span>
        <% end %>
        
        <% if @order.can_be_cancelled? %>
          <a href="#" class="quick-action" onclick="updateOrderStatus('cancelled')">
            <i class="fas fa-times"></i>
            <span>Cancel</span>
          </a>
        <% end %>
        
        <% if @order.can_be_shipped? %>
          <a href="#" class="quick-action" onclick="updateOrderStatus('shipped')">
            <i class="fas fa-truck"></i>
            <span>Ship</span>
          </a>
        <% end %>
        
        <a href="#" class="quick-action" onclick="printOrder()">
          <i class="fas fa-print"></i>
          <span>Print</span>
        </a>
        
        <a href="#" class="quick-action" onclick="shareOrder()">
          <i class="fas fa-share"></i>
          <span>Share</span>
        </a>
      </div>
    </div>
  </div>
</div>


<script>
function toggleQuickActions() {
  const menu = document.querySelector('.quick-actions-menu');
  menu.classList.toggle('active');
}

function updateOrderStatus(status) {
  if (confirm(`Are you sure you want to change the order status to ${status}?`)) {
    // Here you would make an AJAX call to update the status
    fetch(`<%= order_path(@order) %>`, {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
      },
      body: JSON.stringify({
        order: { order_status: status }
      })
    }).then(response => {
      if (response.ok) {
        location.reload();
      }
    });
  }
}

function printOrder() {
  window.print();
}

function shareOrder() {
  if (navigator.share) {
    navigator.share({
      title: 'Order #<%= @order.order_number %>',
      text: 'Order details for <%= @order.customer_name %>',
      url: window.location.href
    });
  } else {
    navigator.clipboard.writeText(window.location.href);
    alert('Order link copied to clipboard!');
  }
}

// Close quick actions on outside click
document.addEventListener('click', function(e) {
  const menu = document.querySelector('.quick-actions-menu');
  if (!menu.contains(e.target)) {
    menu.classList.remove('active');
  }
});
</script>