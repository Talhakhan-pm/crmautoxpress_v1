<div class="main-content">
  <div class="order-detail-container">
    <!-- Hero Header -->
    <div class="order-hero">
      <div class="hero-content">
        <div class="hero-left">
          <div class="breadcrumb">
            <%= link_to "Orders", orders_path %> > Order Details
          </div>
          <h1 class="order-title">
            <span class="order-number">#<%= @order.order_number %></span>
            <% if @order.agent_callback.present? %>
              <span class="source-tag">
                <i class="fas fa-phone"></i>
                From Callback
              </span>
            <% end %>
          </h1>
          <div class="order-meta">
            <span class="order-date">
              <i class="fas fa-calendar"></i>
              Created on <%= @order.order_date.strftime("%B %d, %Y at %I:%M %p") %>
            </span>
            <span class="order-agent">
              <i class="fas fa-user"></i>
              Agent: <%= @order.agent.email.split('@').first.humanize %>
            </span>
          </div>
        </div>
        
        <div class="hero-actions">
          <%= link_to edit_order_path(@order), class: "btn-hero" do %>
            <i class="fas fa-edit"></i>
            Edit Order
          <% end %>
          
          <% if @order.dispatch.present? %>
            <%= link_to dispatch_path(@order.dispatch), class: "btn-hero btn-hero-primary" do %>
              <i class="fas fa-truck"></i>
              View Dispatch
            <% end %>
          <% else %>
            <%= link_to new_dispatch_path(order_id: @order.id), class: "btn-hero btn-hero-primary" do %>
              <i class="fas fa-plus"></i>
              Create Dispatch
            <% end %>
          <% end %>
          
          <div class="status-display">
            <span class="current-status status-<%= @order.order_status %>">
              <span class="status-icon"></span>
              <%= @order.order_status.humanize %>
            </span>
            <span class="priority-display priority-<%= @order.priority %>">
              <%= @order.priority.humanize %> Priority
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Status Progress Bar -->
    <div class="status-progress">
      <div class="progress-container">
        <div class="progress-bar">
          <% order_stages = ['pending', 'confirmed', 'processing', 'shipped', 'delivered'] %>
          <% current_index = order_stages.index(@order.order_status) || 0 %>
          
          <% order_stages.each_with_index do |stage, index| %>
            <div class="progress-step <%= 'active' if index <= current_index %> <%= 'current' if stage == @order.order_status %>">
              <div class="step-icon">
                <% case stage %>
                <% when 'pending' %>
                  <i class="fas fa-clock"></i>
                <% when 'confirmed' %>
                  <i class="fas fa-check-circle"></i>
                <% when 'processing' %>
                  <i class="fas fa-cog fa-spin"></i>
                <% when 'shipped' %>
                  <i class="fas fa-truck"></i>
                <% when 'delivered' %>
                  <i class="fas fa-flag-checkered"></i>
                <% end %>
              </div>
              <div class="step-label"><%= stage.humanize %></div>
              <% if index < order_stages.length - 1 %>
                <div class="step-connector <%= 'active' if index < current_index %>"></div>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <% if @order.tracking_number.present? %>
          <div class="tracking-info">
            <i class="fas fa-map-marker-alt"></i>
            <span>Tracking: <strong><%= @order.tracking_number %></strong></span>
            <% if @order.estimated_delivery.present? %>
              <span class="delivery-estimate">
                ETA: <%= @order.estimated_delivery.strftime("%b %d") %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="order-content">
      <!-- Left Column - Order Details -->
      <div class="order-details">
        <!-- Customer Information Card -->
        <div class="detail-card">
          <div class="card-header">
            <h3 class="card-title">
              <i class="fas fa-user"></i>
              Customer Information
            </h3>
            <% if @order.customer.present? %>
              <%= link_to customer_path(@order.customer), class: "view-profile-btn" do %>
                <i class="fas fa-external-link-alt"></i>
                View Profile
              <% end %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="info-grid">
              <div class="info-item">
                <label class="info-label">Name</label>
                <div class="info-value"><%= @order.customer_name %></div>
              </div>
              <div class="info-item">
                <label class="info-label">Phone</label>
                <div class="info-value">
                  <a href="tel:<%= @order.customer_phone %>" class="contact-link">
                    <i class="fas fa-phone"></i>
                    <%= @order.customer_phone %>
                  </a>
                </div>
              </div>
              <% if @order.customer_email.present? %>
                <div class="info-item">
                  <label class="info-label">Email</label>
                  <div class="info-value">
                    <a href="mailto:<%= @order.customer_email %>" class="contact-link">
                      <i class="fas fa-envelope"></i>
                      <%= @order.customer_email %>
                    </a>
                  </div>
                </div>
              <% end %>
              <% if @order.customer_address.present? %>
                <div class="info-item full-width">
                  <label class="info-label">Address</label>
                  <div class="info-value">
                    <i class="fas fa-map-marker-alt"></i>
                    <%= @order.customer_address %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Product Information Card -->
        <div class="detail-card">
          <div class="card-header">
            <h3 class="card-title">
              <i class="fas fa-box"></i>
              Product Details
            </h3>
            <% if @order.product.present? %>
              <%= link_to product_path(@order.product), class: "view-profile-btn" do %>
                <i class="fas fa-external-link-alt"></i>
                View Product
              <% end %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="product-showcase">
              <div class="product-main">
                <div class="product-name"><%= @order.product_name %></div>
                <% if @order.vehicle_info.present? %>
                  <div class="vehicle-compatibility">
                    <i class="fas fa-car"></i>
                    Compatible with: <strong><%= @order.vehicle_info %></strong>
                  </div>
                <% end %>
                <% if @order.product_link.present? %>
                  <div class="product-link">
                    <a href="<%= @order.product_link %>" target="_blank" class="external-link">
                      <i class="fas fa-external-link-alt"></i>
                      View Product Details
                    </a>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Financial Summary Card -->
        <div class="detail-card">
          <div class="card-header">
            <h3 class="card-title">
              <i class="fas fa-dollar-sign"></i>
              Financial Summary
            </h3>
          </div>
          <div class="card-body">
            <div class="financial-breakdown">
              <div class="price-line">
                <span class="price-label">Product Price</span>
                <span class="price-value">$<%= number_with_delimiter(@order.product_price) %></span>
              </div>
              <% if @order.tax_amount.present? && @order.tax_amount > 0 %>
                <div class="price-line">
                  <span class="price-label">Tax</span>
                  <span class="price-value">$<%= number_with_delimiter(@order.tax_amount) %></span>
                </div>
              <% end %>
              <% if @order.shipping_cost.present? && @order.shipping_cost > 0 %>
                <div class="price-line">
                  <span class="price-label">Shipping</span>
                  <span class="price-value">$<%= number_with_delimiter(@order.shipping_cost) %></span>
                </div>
              <% end %>
              <div class="price-line total-line">
                <span class="price-label">Total Amount</span>
                <span class="price-value total-amount">$<%= number_with_delimiter(@order.total_amount) %></span>
              </div>
              
              <% if @order.commission_amount.present? && @order.commission_amount > 0 %>
                <div class="price-line commission-line">
                  <span class="price-label">Agent Commission</span>
                  <span class="price-value commission-amount">$<%= number_with_delimiter(@order.commission_amount) %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Additional Information -->
        <% if @order.comments.present? || @order.internal_notes.present? || @order.warranty_terms.present? %>
          <div class="detail-card">
            <div class="card-header">
              <h3 class="card-title">
                <i class="fas fa-sticky-note"></i>
                Additional Information
              </h3>
            </div>
            <div class="card-body">
              <% if @order.comments.present? %>
                <div class="note-section">
                  <label class="note-label">Customer Comments</label>
                  <div class="note-content"><%= @order.comments %></div>
                </div>
              <% end %>
              
              <% if @order.internal_notes.present? %>
                <div class="note-section">
                  <label class="note-label">Internal Notes</label>
                  <div class="note-content internal-note"><%= @order.internal_notes %></div>
                </div>
              <% end %>
              
              <% if @order.warranty_terms.present? %>
                <div class="note-section">
                  <label class="note-label">Warranty Terms</label>
                  <div class="note-content warranty-terms"><%= @order.warranty_terms %></div>
                </div>
              <% end %>
              
              <div class="metadata-grid">
                <% if @order.warranty_period_days.present? %>
                  <div class="metadata-item">
                    <span class="metadata-label">Warranty Period</span>
                    <span class="metadata-value"><%= @order.warranty_period_days %> days</span>
                  </div>
                <% end %>
                
                <% if @order.return_window_days.present? %>
                  <div class="metadata-item">
                    <span class="metadata-label">Return Window</span>
                    <span class="metadata-value"><%= @order.return_window_days %> days</span>
                  </div>
                <% end %>
                
                <div class="metadata-item">
                  <span class="metadata-label">Source Channel</span>
                  <span class="metadata-value">
                    <i class="fas fa-<%= @order.source_channel == 'phone' ? 'phone' : @order.source_channel == 'web' ? 'globe' : 'envelope' %>"></i>
                    <%= @order.source_channel.humanize %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Right Column - Activity Timeline -->
      <div class="activity-column">
        <div class="activity-panel">
          <div class="activity-header">
            <h3 class="activity-title">
              <i class="fas fa-history"></i>
              Order Timeline
              <span class="activity-count"><%= @activities.count %></span>
            </h3>
            
            <div class="timeline-stats">
              <div class="stat-item">
                <span class="stat-value"><%= @activities.count %></span>
                <span class="stat-label">Activities</span>
              </div>
              <div class="stat-item">
                <span class="stat-value"><%= @activities.where(action: 'updated').count %></span>
                <span class="stat-label">Updates</span>
              </div>
              <div class="stat-item">
                <span class="stat-value"><%= @activities.select(:user_id).distinct.count %></span>
                <span class="stat-label">Agents</span>
              </div>
            </div>
          </div>

          <div class="timeline-container" id="timeline-list">
            <% if @activities.any? %>
              <% @activities.each do |activity| %>
                <div class="timeline-item">
                  <div class="timeline-marker">
                    <div class="timeline-avatar">
                      <%= activity.user.email.first.upcase %>
                    </div>
                  </div>
                  
                  <div class="timeline-content">
                    <div class="timeline-card">
                      <div class="timeline-header">
                        <div class="timeline-user">
                          <div class="user-avatar">
                            <%= activity.user.email.first.upcase %>
                          </div>
                          <div class="user-details">
                            <div class="user-name"><%= activity.user.email.split('@').first.humanize %></div>
                            <div class="user-email"><%= activity.user.email %></div>
                          </div>
                        </div>
                        
                        <div class="timeline-meta">
                          <div class="timeline-time">
                            <%= time_ago_in_words(activity.created_at) %> ago
                          </div>
                          <span class="action-badge action-<%= activity.action %>">
                            <%= activity.action.humanize %>
                          </span>
                        </div>
                      </div>
                      
                      <div class="timeline-body">
                        <div class="activity-description">
                          <% case activity.action %>
                          <% when 'created' %>
                            <strong><%= activity.user.email.split('@').first.humanize %></strong> created this order
                            <% if activity.trackable.agent_callback.present? %>
                              from callback <strong>#<%= activity.trackable.agent_callback.id %></strong>
                            <% end %>
                          <% when 'updated' %>
                            <strong><%= activity.user.email.split('@').first.humanize %></strong> updated the order
                            <% if activity.field_changed.present? %>
                              - changed <strong><%= activity.field_changed.humanize %></strong>
                            <% end %>
                          <% when 'viewed' %>
                            <strong><%= activity.user.email.split('@').first.humanize %></strong> viewed order details
                          <% else %>
                            <strong><%= activity.user.email.split('@').first.humanize %></strong> <%= activity.action.humanize.downcase %>d the order
                          <% end %>
                        </div>
                        
                        <% if activity.field_changed.present? && activity.old_value.present? && activity.new_value.present? %>
                          <div class="timeline-changes">
                            <div class="change-item">
                              <span class="change-label"><%= activity.field_changed.humanize %></span>
                              <span class="change-from status-<%= activity.old_value %>"><%= activity.old_value.humanize %></span>
                              <i class="fas fa-arrow-right"></i>
                              <span class="change-to status-<%= activity.new_value %>"><%= activity.new_value.humanize %></span>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="empty-timeline">
                <i class="fas fa-history"></i>
                <h4>No Activity Yet</h4>
                <p>Order activities will appear here as they happen.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions Floating Menu -->
    <div class="quick-actions-menu">
      <button class="quick-toggle" onclick="toggleQuickActions()">
        <i class="fas fa-ellipsis-v"></i>
      </button>
      
      <div class="quick-actions-list">
        <%= link_to edit_order_path(@order), class: "quick-action" do %>
          <i class="fas fa-edit"></i>
          <span>Edit</span>
        <% end %>
        
        <% if @order.can_be_cancelled? %>
          <a href="#" class="quick-action" onclick="updateOrderStatus('cancelled')">
            <i class="fas fa-times"></i>
            <span>Cancel</span>
          </a>
        <% end %>
        
        <% if @order.can_be_shipped? %>
          <a href="#" class="quick-action" onclick="updateOrderStatus('shipped')">
            <i class="fas fa-truck"></i>
            <span>Ship</span>
          </a>
        <% end %>
        
        <a href="#" class="quick-action" onclick="printOrder()">
          <i class="fas fa-print"></i>
          <span>Print</span>
        </a>
        
        <a href="#" class="quick-action" onclick="shareOrder()">
          <i class="fas fa-share"></i>
          <span>Share</span>
        </a>
      </div>
    </div>
  </div>
</div>

