<div class="metric-card total">
  <div class="metric-icon">
    <i class="fas fa-tasks"></i>
  </div>
  <div class="metric-content">
    <div class="metric-value"><%= stats[:total_pending_resolution] %></div>
    <div class="metric-label">Total Pending</div>
  </div>
  <div class="metric-trend neutral">
    <i class="fas fa-minus"></i>
  </div>
</div>

<div class="metric-card warning">
  <div class="metric-icon">
    <i class="fas fa-phone"></i>
  </div>
  <div class="metric-content">
    <div class="metric-value"><%= stats[:agent_clarification] %></div>
    <div class="metric-label">Agent Action Needed</div>
  </div>
  <div class="metric-trend <%= stats[:agent_clarification] > 0 ? 'negative' : 'neutral' %>">
    <i class="fas fa-<%= stats[:agent_clarification] > 0 ? 'arrow-up' : 'minus' %>"></i>
  </div>
</div>

<div class="metric-card info">
  <div class="metric-icon">
    <i class="fas fa-clipboard-check"></i>
  </div>
  <div class="metric-content">
    <div class="metric-value"><%= stats[:dispatcher_decision] %></div>
    <div class="metric-label">Dispatcher Review</div>
  </div>
  <div class="metric-trend <%= stats[:dispatcher_decision] > 0 ? 'negative' : 'neutral' %>">
    <i class="fas fa-<%= stats[:dispatcher_decision] > 0 ? 'arrow-up' : 'minus' %>"></i>
  </div>
</div>


<div class="metric-card danger">
  <div class="metric-icon">
    <i class="fas fa-exclamation-triangle"></i>
  </div>
  <div class="metric-content">
    <div class="metric-value"><%= stats[:overdue_resolutions] %></div>
    <div class="metric-label">Overdue</div>
  </div>
  <div class="metric-trend <%= stats[:overdue_resolutions] > 0 ? 'negative' : 'positive' %>">
    <i class="fas fa-<%= stats[:overdue_resolutions] > 0 ? 'arrow-up' : 'arrow-down' %>"></i>
  </div>
</div>

<div class="metric-card success">
  <div class="metric-icon">
    <i class="fas fa-percentage"></i>
  </div>
  <div class="metric-content">
    <div class="metric-value"><%= stats[:resolution_completion_rate] %>%</div>
    <div class="metric-label">Completion Rate</div>
  </div>
  <div class="metric-trend <%= stats[:resolution_completion_rate] >= 80 ? 'positive' : 'negative' %>">
    <i class="fas fa-<%= stats[:resolution_completion_rate] >= 80 ? 'arrow-up' : 'arrow-down' %>"></i>
  </div>
</div>