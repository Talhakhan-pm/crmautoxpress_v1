<tr id="<%= dom_id(customer) %>">
  <td>
    <div class="customer-info">
      <strong><%= customer.name %></strong>
      <% if customer.gclid.present? %>
        <span class="badge badge-google-ads">Google Ads</span>
      <% end %>
    </div>
  </td>
  <td>
    <a href="tel:<%= customer.phone_number %>" class="phone-link">
      <%= customer.phone_number %>
    </a>
  </td>
  <td>
    <% if customer.email.present? %>
      <a href="mailto:<%= customer.email %>"><%= customer.email %></a>
    <% else %>
      <span class="text-muted">-</span>
    <% end %>
  </td>
  <td>
    <span class="badge badge-<%= customer.status %>">
      <%= customer.status.humanize %>
    </span>
  </td>
  <td>
    <% if customer.source_campaign.present? %>
      <span class="source-badge"><%= customer.source_campaign.humanize %></span>
    <% else %>
      <span class="text-muted">-</span>
    <% end %>
  </td>
  <td>
    <span class="callback-count">
      <%= customer.callback_count %>
      <small class="text-muted">callbacks</small>
    </span>
  </td>
  <td>
    <% if customer.last_callback %>
      <span class="last-contact">
        <%= time_ago_in_words(customer.last_callback.created_at) %> ago
      </span>
    <% else %>
      <span class="text-muted">Never</span>
    <% end %>
  </td>
  <td>
    <div class="action-buttons">
      <%= link_to customer_path(customer), class: "btn btn-sm btn-outline-primary", data: { turbo_frame: "main_content" } do %>
        <i class="fas fa-eye"></i> View
      <% end %>
      <%= link_to edit_customer_path(customer), class: "btn btn-sm btn-outline-secondary", data: { turbo_frame: "main_content" } do %>
        <i class="fas fa-edit"></i> Edit
      <% end %>
    </div>
  </td>
</tr>