<div class="notifications-container" data-controller="notifications">
  <!-- Notification Bell -->
  <div class="notification-bell" data-action="click->notifications#toggle" data-notifications-target="bell">
    <i class="fas fa-bell"></i>
    <% if current_user.unread_notification_count > 0 %>
      <span class="notification-badge" data-notifications-target="badge">
        <%= current_user.unread_notification_count %>
      </span>
    <% end %>
  </div>

  <!-- Notification Dropdown -->
  <div class="notification-dropdown" data-notifications-target="dropdown" style="display: none;">
    <div class="notification-header">
      <h3>Notifications</h3>
      <% if current_user.unread_notification_count > 0 %>
        <button class="mark-all-read-btn" data-action="click->notifications#markAllRead">
          Mark all read
        </button>
      <% end %>
    </div>

    <div class="notification-list" data-notifications-target="list">
      <% if current_user.recent_notifications.any? %>
        <% current_user.recent_notifications.each do |notification| %>
          <%= render 'shared/notification_item', notification: notification %>
        <% end %>
        
        <div class="notification-footer">
          <%= link_to "#", class: "view-all-link" do %>
            View all notifications
          <% end %>
        </div>
      <% else %>
        <div class="empty-notifications">
          <i class="fas fa-bell-slash"></i>
          <p>No notifications yet</p>
        </div>
      <% end %>
    </div>
  </div>
</div>