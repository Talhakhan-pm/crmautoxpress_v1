<div class="resolution-communication-system" 
     data-controller="unified-resolution"
     data-unified-resolution-refund-id-value="<%= refund.id %>"
     data-unified-resolution-current-stage-value="<%= refund.resolution_stage %>"
     data-unified-resolution-user-id-value="<%= current_user&.id %>">

  <!-- Communication Hub Toggle Button -->
  <div class="communication-hub-trigger">
    <button type="button" 
            class="btn-communication-hub"
            data-action="click->unified-resolution#toggleHub"
            data-unified-resolution-target="trigger">
      <div class="hub-icon">
        <i class="fas fa-comments"></i>
        <% if refund.needs_resolution_action? %>
          <span class="notification-badge pulse"></span>
        <% end %>
      </div>
      <div class="hub-label">
        <span class="main-text">Resolution Hub</span>
        <span class="sub-text">Order #<%= refund.order.order_number %></span>
      </div>
    </button>
  </div>

  <!-- Communication Hub Panel -->
  <div class="communication-hub-panel d-none" 
       data-unified-resolution-target="hub">
    
    <!-- Header -->
    <div class="hub-header">
      <div class="hub-title">
        <h5 class="mb-0">
          <i class="fas fa-comments me-2"></i>
          Resolution Center
        </h5>
        <span class="order-info">Order #<%= refund.order.order_number %></span>
      </div>
      <button type="button" 
              class="btn-close-hub"
              data-action="click->unified-resolution#hideHub">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- Progress Indicator -->
    <div class="resolution-progress-container">
      <div class="progress-header">
        <span class="current-stage-label">
          <%= refund.resolution_stage_description %>
        </span>
        <span class="progress-percentage">
          <%= case refund.resolution_stage
              when 'pending_customer_clarification' then '25%'
              when 'pending_dispatch_decision' then '50%'
              when 'pending_customer_approval' then '75%'
              when 'resolution_completed' then '100%'
              else '0%'
              end %>
        </span>
      </div>
      <div class="progress resolution-progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated"
             data-unified-resolution-target="progressBar"
             role="progressbar" 
             aria-valuenow="25" 
             aria-valuemin="0" 
             aria-valuemax="100">
        </div>
      </div>
      <div class="progress-stages">
        <div class="stage <%= 'active' if %w[pending_customer_clarification pending_dispatch_decision pending_customer_approval resolution_completed].include?(refund.resolution_stage) %>">
          <span class="stage-dot"></span>
          <span class="stage-label">Clarify</span>
        </div>
        <div class="stage <%= 'active' if %w[pending_dispatch_decision pending_customer_approval resolution_completed].include?(refund.resolution_stage) %>">
          <span class="stage-dot"></span>
          <span class="stage-label">Decide</span>
        </div>
        <div class="stage <%= 'active' if %w[pending_customer_approval resolution_completed].include?(refund.resolution_stage) %>">
          <span class="stage-dot"></span>
          <span class="stage-label">Approve</span>
        </div>
        <div class="stage <%= 'active' if refund.resolution_stage == 'resolution_completed' %>">
          <span class="stage-dot"></span>
          <span class="stage-label">Complete</span>
        </div>
      </div>
    </div>

    <!-- Conversation Area -->
    <div class="conversation-container" 
         data-unified-resolution-target="conversation">
      
      <!-- System Message -->
      <div class="message system-message">
        <div class="message-avatar">
          <i class="fas fa-robot"></i>
        </div>
        <div class="message-content">
          <div class="message-header">
            <span class="sender-name">AutoXpress System</span>
            <span class="message-time"><%= refund.created_at.strftime("%I:%M %p") %></span>
          </div>
          <div class="message-body">
            Resolution process initiated for <%= refund.refund_reason.humanize %> refund.
            <% if refund.order.dispatch&.cancelled? %>
              Triggered by dispatch cancellation.
            <% end %>
          </div>
        </div>
      </div>

      <!-- Agent Notes as Messages -->
      <% if refund.agent_notes.present? %>
        <div class="message agent-message">
          <div class="message-avatar">
            <i class="fas fa-user-tie"></i>
          </div>
          <div class="message-content">
            <div class="message-header">
              <span class="sender-name">Customer Agent</span>
              <span class="message-time"><%= refund.updated_at.strftime("%I:%M %p") %></span>
            </div>
            <div class="message-body">
              <%= simple_format(refund.agent_notes) %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Dispatcher Notes as Messages -->
      <% if refund.dispatcher_notes.present? %>
        <div class="message dispatcher-message">
          <div class="message-avatar">
            <i class="fas fa-truck"></i>
          </div>
          <div class="message-content">
            <div class="message-header">
              <span class="sender-name">Dispatch Team</span>
              <span class="message-time"><%= refund.updated_at.strftime("%I:%M %p") %></span>
            </div>
            <div class="message-body">
              <%= simple_format(refund.dispatcher_notes) %>
              <% if refund.alternative_part_name.present? %>
                <div class="alternative-part-info mt-2">
                  <strong>Alternative Part:</strong> <%= refund.alternative_part_name %><br>
                  <strong>Price:</strong> $<%= refund.alternative_part_price %>
                  <% if refund.price_difference != 0 %>
                    (<%= refund.price_difference > 0 ? '+' : '' %>$<%= refund.price_difference %> difference)
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Customer Response as Message -->
      <% if refund.customer_response.present? %>
        <div class="message customer-message">
          <div class="message-avatar">
            <i class="fas fa-user"></i>
          </div>
          <div class="message-content">
            <div class="message-header">
              <span class="sender-name"><%= refund.order.customer.name %></span>
              <span class="message-time"><%= refund.updated_at.strftime("%I:%M %p") %></span>
            </div>
            <div class="message-body">
              <%= simple_format(refund.customer_response) %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Typing Indicator -->
      <div class="typing-indicator-container" 
           data-unified-resolution-target="statusIndicator">
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions-container">
      <div class="quick-actions-header">
        <span>Quick Actions</span>
      </div>
      <div class="quick-actions-grid" 
           data-unified-resolution-target="quickActions">
        <!-- Actions will be populated by Stimulus controller -->
      </div>
    </div>

    <!-- Message Input -->
    <div class="message-input-container">
      <%= form_with url: resolution_path(refund), method: :patch, 
                    data: { action: "submit->unified-resolution#sendMessage" },
                    class: "message-form" do |form| %>
        <div class="input-group">
          <input type="text" 
                 class="form-control message-input"
                 data-unified-resolution-target="messageInput"
                 placeholder="Type your message..."
                 autocomplete="off">
          <button type="submit" class="btn btn-primary send-button">
            <i class="fas fa-paper-plane"></i>
          </button>
        </div>
        
        <!-- Additional Options -->
        <div class="message-options">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="internal-note">
            <label class="form-check-label" for="internal-note">
              Internal note
            </label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="notify-customer">
            <label class="form-check-label" for="notify-customer">
              Notify customer
            </label>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
