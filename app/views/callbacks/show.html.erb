<% content_for :page_title, "Callback Details" %>

<%= turbo_stream_from "callback_#{@callback.id}_activities" %>

<% if turbo_frame_request? %>
  <%= turbo_frame_tag "main_content", data: { controller: "callback-form" } do %>
    <%= render 'show_content', callback: @callback %>
  <% end %>
<% else %>
  <main class="main-content" data-controller="callback-form">
    <%= render 'show_content', callback: @callback %>
  </main>
<% end %>