<%= turbo_frame_tag "main_content", data: { turbo_action: "advance" } do %>
  <main class="main-content">
    <!-- Modern Callback Modal -->
    <div class="mcm-overlay mcm-active" 
         data-controller="modal callback-form"
         data-modal-close-url-value="<%= callbacks_path %>"
         data-action="click->modal#closeModal">
      
      <div class="mcm-container" 
           data-callback-form-target="modal" 
           data-action="click->modal#stopPropagation">
        
        <!-- Header -->
        <div class="mcm-header">
          <h2 class="mcm-title">
            <i class="fas fa-phone-alt mcm-icon"></i>
            Create New Callback
          </h2>
          <p class="mcm-subtitle">Capture lead information and schedule follow-ups</p>
          
          <button type="button" 
                  class="mcm-close" 
                  data-action="click->modal#closeModal"
                  aria-label="Close modal">
            <i class="fas fa-times"></i>
          </button>
        </div>

        <!-- Body -->
        <div class="mcm-body">
          <%= render 'form', callback: @callback %>
        </div>
      </div>
    </div>
  </main>
<% end %>